<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신청기간 : "
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/after_school_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-9-15 ~ 2017-9-20"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/check_after_school_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="28dp"
        android:text="@string/default_intro2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:text="월요일 : "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/check_after_school_monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생각을 여는 독서반"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:text="화요일 : "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/check_after_school_thuseday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생각을 여는 독서반"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:text="토요일 : "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/check_after_school_friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="배구 반"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="24dp"
            android:src="@drawable/check_dormitory_gampus" />
    </FrameLayout>

    <Button
        android:id="@+id/submit_check_after_school"
        android:textColor="@color/white"
        android:text="방과후 신청"
        android:textSize="20dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded4"
        android:backgroundTint="@color/colorPrimary"
        />
</LinearLayout>